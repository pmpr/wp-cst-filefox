#ff_revision_box .inside {
    padding: 0
}

#revision-content {
    clear: both;
    padding: 10px;
}

#revision-actions {
    clear: both;
    display: flex;
    padding: 10px;
    background: #f6f7f7;
    border-top: 1px solid #dcdcde;
    justify-content: space-between;
}

.revision-minor-actions {
    clear: both;
    display: flex;
    justify-content: space-between;
}

.delete-revision,
.reject-revision {
    margin: auto 0;
}

.delete-revision a,
.reject-revision a {
    color: #b32d2e;
}

.revision-content-section {
    margin-top: 10px;
}
